---
import Footer from "../component/Footer.astro";
import Header from "../component/Header";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <title>{title}</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body class="overflow-x-hidden dark:bg-neutral-900 dark:text-gray-100">
    <Header client:load />
    <slot />
    <Footer />
  </body>
</html>
