---
import Layout from "../../layout/Layout.astro";
import { projects } from "../../utils/projects";
---

<Layout title="Projects">
  <main class="">
    <section class="space-y-10 w-10/12 mx-auto py-10">
      {
        projects.map(project => {
          return (
            <div class="p-2 pb-5 md:pb-2 rounded-md border-2 border-black  shadow-comic-light  md:flex md:justify-between md:even:flex-row-reverse">
              <img
                class="md:min-w-[50%] w-full border-2 border-gray-300 rounded-md"
                src={project.image}
              />
              <div class="capitalize mx-4 space-y-3 flex flex-col">
                <a target="_blank" href={project.link}>
                  <h3 class="font-semibold hover:underline hover:underline-offset-2 md:text-5xl text-3xl">
                    {project.title}
                  </h3>
                </a>
                <span class="font-normal md:text-2xl text-xl text-gray-800">
                  {project.subTitle}
                </span>
                <p class="md:text-lg text-lg mt-5 text-gray-700">{project.about}</p>
              </div>
            </div>
          );
        })
      }
      <div>
        <p class="text-lg font-semibold text-center tracking-wide">
          You can checkout my other projects on <a
            target="_blank"
            class="text-blue-700 font-bold underline underline-offset-2"
            href="https://github.com/Arjun259194">Github</a
          >
        </p>
      </div>
    </section>
  </main>
</Layout>
